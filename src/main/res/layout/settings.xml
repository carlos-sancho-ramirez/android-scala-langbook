<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settingsDatabaseSection"/>

    <TextView
        android:id="@+id/settingsDatabaseInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settingsDatabaseInfo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/importDatabaseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settingsDatabaseImportButton"/>

        <Button
            android:id="@+id/exportDatabaseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settingsDatabaseExportButton"/>
    </LinearLayout>
</LinearLayout>
